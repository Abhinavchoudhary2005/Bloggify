<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home</title>
    <%- include("./partials/head") %>
  </head>
  <body>
    <%- include("./partials/nav", { user: user }) %>

    <div class="container mt-5">
      <h1>Welcome to the Blogs</h1>

      <div class="mt-3">
        <% if (blogs.length > 0) { %>
        <div class="row">
          <% blogs.forEach(blog => { %>
          <div class="col-md-4 mb-4">
            <div class="card shadow-lg p-3 mb-3 bg-body-tertiary rounded">
              <img
                src="/uploads/<%= blog.coverImage %>"
                class="card-img-top img-thumbnail mh-70"
                style="height: 200px"
                alt="..."
              />
              <div class="card-body">
                <h5 class="card-title"><%= blog.title %></h5>
              </div>
              <small class="mb-4 ms-3">Created By <%= blog.userName %></small>
              <a
                href="/blog/<%= blog._id %>"
                class="btn btn-primary mb-3 ms-3 align-middle"
                style="width: 150px; background-color: #00203fff"
                >Read Full Blog</a
              >
            </div>
          </div>
          <% }); %>
        </div>
      </div>
      <% } else { %>
      <p>No blogs available</p>
      <% } %>
    </div>
    <%- include("./partials/scripts") %>
  </body>
</html>
