<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sign In</title>
    <%- include("./partials/head") %>
    <style>
      body {
        background-color: #f0f0f0;
      }
      .signin {
        height: 88vh;
        width: 100vw;
        display: flex;
        justify-content: center;
        align-items: center;
      }
      .signin-card {
        width: 40vw;
        padding: 2rem;
        background-color: white;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      }
      .signin-input {
        margin-bottom: 1.2rem;
        font-size: 0.9rem;
        color: rgb(43, 42, 42);
        height: 48px;
      }
      .signin-btn {
        background-color: #cf3c3c;
        color: white;
        border: none;
        cursor: pointer;
        width: 100%;
        padding: 1rem;
        transition: background-color 0.5s ease;
      }
      .signin-btn:hover {
        background-color: #bb2d2d;
        color: aliceblue;
      }
      .signin-text {
        color: #cf3c3c;
        cursor: pointer;
      }
      .checkbox-label {
        margin-left: 0.5rem;
      }
      @media screen and (max-width: 1000px) {
        .signin-card {
          width: 60vw;
        }
      }
      @media screen and (max-width: 650px) {
        .signin-card {
          width: 90vw;
        }
      }
    </style>
  </head>
  <body>
    <%- include("./partials/nav", { user: user }) %>
    <div class="signin">
      <div class="signin-card">
        <h2 class="form-title text-center">Sign In</h2>
        <form method="POST" action="/user/signin">
          <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label"
              >Email address</label
            >
            <input
              type="email"
              name="email"
              class="form-control signin-input"
              id="exampleInputEmail1"
              aria-describedby="emailHelp"
              required
            />
            <div id="emailHelp" class="form-text">
              We'll never share your email with anyone else.
            </div>
          </div>
          <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label"
              >Password</label
            >
            <input
              type="password"
              name="password"
              class="form-control signin-input"
              id="exampleInputPassword1"
              required
            />
          </div>
          <button type="submit" class="btn signin-btn">Continue</button>
          <p class="mt-3 ms-2">
            Create an account?
            <b class="signin-text" onclick="handleSwitchMode()">Create here</b>
          </p>
          <div class="form-check">
            <input
              type="checkbox"
              class="form-check-input"
              style="border: 1px solid black"
              id="signin-checkbox"
            />
            <label
              class="form-check-label checkbox-label"
              for="signin-checkbox"
            >
              By continuing, I agree to the terms of use & privacy policy
            </label>
          </div>
        </form>
      </div>
    </div>
    <%- include("./partials/scripts") %>
    <script>
      function handleSwitchMode() {
        window.location.href = "/user/signup";
      }
    </script>
  </body>
</html>
